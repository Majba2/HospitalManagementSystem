@using cloudscribe.Pagination.Models
@model cloudscribe.Pagination.Models.PagedResult<Hospital.ViewModels.RoomViewModels>

@{
    ViewData["Title"] = "Index";
}

<h1>Room'S Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
          @*   <th>
               ID
            </th> *@
            <th>
             RoomNumber
            </th>
            <th>
            Type
            </th>
            <th>
         Status
            </th>
            <th>
              Hospital
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.HiddenFor(modelItem=>item.ID)
        @*         @Html.DisplayFor(modelItem => item.ID) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalInfo.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
<cs-pager cs-paging-pagesize=(int)Model.PageSize
          cs-paging-pagenumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalItems
          cs-pagenumber-param="pageNumber"
          asp-controller="Rooms"
          asp-action="Index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item "
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link "
          cs-pager-link-other-class="page-link ">

</cs-pager>